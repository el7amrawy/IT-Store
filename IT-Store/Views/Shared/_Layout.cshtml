@inject ICategoryRepository _categoryRep
@inject ICartRepository _cartRep
@{
	var categories = new SelectList(_categoryRep.GetAll(), "CategoryId", "Name");
	Cart cart = null;
	if (User.Identity.IsAuthenticated)
	{
		var idClaim = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.NameIdentifier);
		cart = _cartRep.GetCartByUserId(int.Parse( idClaim.Value));
	}
}
